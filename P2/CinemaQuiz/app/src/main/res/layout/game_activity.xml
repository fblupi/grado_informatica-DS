<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:padding="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/image"
            android:src="@drawable/gargantua" />

        <RelativeLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <MediaController
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mediaController"
                android:layout_gravity="center" />

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:layout_weight="0.4">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollViewQuestion" >

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/buttonTextColor"
                android:text="¿Cuál de estos nombres corresponde al agujero negro de la imagen?"
                android:id="@+id/question"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"/>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:layout_weight="0.25">
        <Button
            android:text="Gargántula"
            android:id="@+id/option0"
            android:layout_gravity="center_horizontal"
            style="@style/Buttons"/>

        <Button
            android:text="Gargantúa"
            android:id="@+id/option1"
            android:layout_gravity="center_horizontal"
            style="@style/Buttons"/>

        <Button
            android:text="Garganta"
            android:id="@+id/option2"
            android:layout_gravity="center_horizontal"
            style="@style/Buttons"/>

        <Button
            android:text="Gargantilla"
            android:id="@+id/option3"
            android:layout_gravity="center_horizontal"
            style="@style/Buttons" />
    </LinearLayout>

</LinearLayout>